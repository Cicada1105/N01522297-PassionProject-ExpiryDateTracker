@model N01522297_PassionProject_ExpiryDateTracker.Models.ViewModels.UpdateItem
@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Edit Item</h2>

<form class="text-center" method="post" action="/Item/Update/@Model.SelectedItem.ItemID">
    <div class="form-group">
        <label for="itemName">Name:</label>
        <input id="itemName" type="text" name="ItemName" value="@Model.SelectedItem.ItemName" />
    </div>
    <div class="form-group">
        <label for="itemExpiry">Expiry</label>
        <input id="itemExpiry"  type="date" min="@DateTime.Now" name="ItemExpiry" value='@Model.SelectedItem.ItemExpiry.ToUniversalTime().ToString("u").Split(' ')[0]' />
    </div>
    <div class="form-group">
        <label for="pantryID">PantryID</label>
        <select id="pantryID"  name="PantryID">
            @foreach (var pantry in Model.PantryOptions)
            {
                <option value="@pantry.PantryID">@pantry.PantryName</option>
            }
        </select>
    </div>
    <input type="hidden" name="ItemID" value="@Model.SelectedItem.ItemID" />
    <input class="btn btn-primary"  type="submit" value="Update" />
</form>
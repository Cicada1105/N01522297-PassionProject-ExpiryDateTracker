@model N01522297_PassionProject_ExpiryDateTracker.Models.User
@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Edit User</h2>
<form class="text-center" action="/User/Update/@Model.UserID" method="post">
    <div class="form-group">
        <label for="userFirstName">First Name</label>
        <input id="userFirstName" type="text" name="UserFName" value="@Model.UserFName" />
    </div>
    <div class="form-group">
        <label for="userLastName">Last Name</label>
        <input id="userLastName" type="text" name="UserLName" value="@Model.UserLName" />
    </div>
    <input type="hidden" name="UserID" value="@Model.UserID" />
    <input class="btn btn-primary" type="submit" value="Update" />
</form>